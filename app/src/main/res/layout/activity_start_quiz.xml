<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/custom_backround_1"
    tools:context=".StartQuiz">

    <TextView
        android:id="@+id/questionPlace"
        android:layout_width="340dp"
        android:layout_height="65dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="4dp"
        android:fontFamily="@font/aldrich"
        android:gravity="center"
        android:text="@string/Quest_one"
        android:textColor="@color/yellow2"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline2" />

    <TextView
        android:id="@+id/quest"
        android:layout_width="340dp"
        android:layout_height="65dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/aldrich"
        android:gravity="center"
        android:text="@string/Quest_one"
        android:textColor="@color/yellow2"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="20"
        android:textColor="@color/yellow2"
        android:textSize="16sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questionPlace" />

    <Button
        android:id="@+id/btnResponse1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/btn_yellow_custom"
        android:text="Button"
        android:textColor="@color/black"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/btnResponse2"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playerName1"
        app:layout_constraintWidth_percent="0.45" />

    <Button
        android:id="@+id/btnResponse2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/btn_yellow_custom"
        android:text="Button"
        android:textColor="@color/black"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnResponse1"
        app:layout_constraintTop_toBottomOf="@+id/playerName3"
        app:layout_constraintWidth_percent="0.45" />

    <Button
        android:id="@+id/btnResponse3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_yellow_custom"
        android:text="Button"
        android:textColor="@color/black"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/btnResponse4"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnResponse1"
        app:layout_constraintWidth_percent="0.45" />

    <Button
        android:id="@+id/btnResponse4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_yellow_custom"
        android:text="Button"
        android:textColor="@color/black"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnResponse3"
        app:layout_constraintTop_toBottomOf="@+id/btnResponse2"
        app:layout_constraintWidth_percent="0.45" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.56" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.23" />

    <ImageView
        android:id="@+id/playerIcon3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toStartOf="@+id/playerIcon4"
        app:layout_constraintHeight_percent="0.057"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/playerIcon2"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        app:layout_constraintWidth_percent="0.101" />

    <ImageView
        android:id="@+id/playerIcon1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toStartOf="@+id/playerIcon2"
        app:layout_constraintHeight_percent="0.057"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        app:layout_constraintWidth_percent="0.101" />

    <ImageView
        android:id="@+id/playerIcon2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toStartOf="@+id/playerIcon3"
        app:layout_constraintHeight_percent="0.057"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/playerIcon1"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        app:layout_constraintWidth_percent="0.101" />

    <ImageView
        android:id="@+id/playerIcon4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.057"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/playerIcon3"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        app:layout_constraintWidth_percent="0.101" />

    <TextView
        android:id="@+id/playerName1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/aldrich"
        android:text="@string/PlayerNames"
        android:textColor="@color/yellow2"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/playerIcon1"
        app:layout_constraintStart_toStartOf="@+id/playerIcon1"
        app:layout_constraintTop_toBottomOf="@+id/playerIcon1" />

    <TextView
        android:id="@+id/playerName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/aldrich"
        android:text="@string/PlayerNames"
        android:textColor="@color/yellow2"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/playerIcon2"
        app:layout_constraintStart_toStartOf="@+id/playerIcon2"
        app:layout_constraintTop_toBottomOf="@+id/playerIcon2" />

    <TextView
        android:id="@+id/playerName3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/aldrich"
        android:text="@string/PlayerNames"
        android:textColor="@color/yellow2"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/playerIcon3"
        app:layout_constraintStart_toStartOf="@+id/playerIcon3"
        app:layout_constraintTop_toBottomOf="@+id/playerIcon3" />

    <TextView
        android:id="@+id/playerName4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/aldrich"
        android:text="@string/PlayerNames"
        android:textColor="@color/yellow2"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/playerIcon4"
        app:layout_constraintStart_toStartOf="@+id/playerIcon4"
        app:layout_constraintTop_toBottomOf="@+id/playerIcon4" />

    <TextView
        android:id="@+id/textViewCounter1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="0"
        android:textColor="@color/yellow2"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/btnResponse1"
        app:layout_constraintStart_toStartOf="@+id/btnResponse1"
        app:layout_constraintTop_toBottomOf="@+id/btnResponse1" />

    <TextView
        android:id="@+id/textViewCounter2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="0"
        android:textColor="@color/yellow2"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/btnResponse2"
        app:layout_constraintStart_toStartOf="@+id/btnResponse2"
        app:layout_constraintTop_toBottomOf="@+id/btnResponse2" />

    <TextView
        android:id="@+id/textViewCounter3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="0"
        android:textColor="@color/yellow2"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/btnResponse3"
        app:layout_constraintStart_toStartOf="@+id/btnResponse3"
        app:layout_constraintTop_toBottomOf="@+id/btnResponse3" />

    <TextView
        android:id="@+id/textViewCounter4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="0"
        android:textColor="@color/yellow2"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/btnResponse4"
        app:layout_constraintStart_toStartOf="@+id/btnResponse4"
        app:layout_constraintTop_toBottomOf="@+id/btnResponse4" />

</androidx.constraintlayout.widget.ConstraintLayout>